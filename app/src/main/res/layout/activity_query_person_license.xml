<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_use_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.special.activity.unit.UseUnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name0"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/name_hint"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/id_code"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/id_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/id_card_hint"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gender"
            android:textSize="@dimen/font_caption" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />

            <RadioButton
                android:id="@+id/btn_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女" />

        </RadioGroup>
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/permission_type"
            android:textSize="@dimen/font_caption" />


        <TextView
            android:id="@+id/permission_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/permission_hint"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <Button
        android:id="@+id/btn_search"
        style="@style/ButtonMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_footer_left_right_padding"
        android:layout_marginRight="@dimen/header_footer_left_right_padding"
        android:layout_marginTop="@dimen/header_footer_left_right_padding"
        android:background="@drawable/selector_theme_button"
        android:text="@string/search" />
</LinearLayout>
