<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_use_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.special.activity.unit.UseUnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单位代码"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/unit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入单位代码"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单位名称"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入单位名称"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查人员"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/check_person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="选择检查人员"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备注册代码"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/reg_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入设备注册代码"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查开始时间"
            android:textSize="@dimen/font_caption" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="起始时间"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="至"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="结束时间"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检查结束时间"
            android:textSize="@dimen/font_caption" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="起始时间"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="至"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:id="@+id/end_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="结束时间"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <Button
        android:id="@+id/btn_search"
        style="@style/ButtonMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_footer_left_right_padding"
        android:layout_marginRight="@dimen/header_footer_left_right_padding"
        android:layout_marginTop="@dimen/header_footer_left_right_padding"
        android:background="@drawable/selector_theme_button"
        android:text="@string/search" />
</LinearLayout>
