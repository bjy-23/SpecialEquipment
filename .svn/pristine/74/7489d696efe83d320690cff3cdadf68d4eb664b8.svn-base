<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vote_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.wondersgroup.special.activity.VoteDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/indicator_right_padding"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:paddingTop="@dimen/indicator_right_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位名称"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_body" />

        </LinearLayout>


        <TextView
            android:id="@+id/appeal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:text="申诉日期："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/appeal_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:text="申诉人："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/appeal_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:text="申诉来源："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/appeal_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:text="申诉结果："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/indicator_right_padding"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/basic_info"
            layout="@layout/layout_info" />

        <include layout="@layout/subtitle_divide_line_bold" />

    </LinearLayout>
</LinearLayout>
