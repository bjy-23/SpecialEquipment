<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/indicator_right_padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/indicator_right_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_body" />

    </LinearLayout>


    <TextView
        android:id="@+id/happen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="发生时间："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/report_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="上报时间："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="所属区域："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/accident_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="事故地点："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/accident_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="事故类别："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />


</LinearLayout>