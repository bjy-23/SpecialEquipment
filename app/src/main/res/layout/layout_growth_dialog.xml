<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_panel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/title"
                android:contentDescription="@string/app_name"
                android:src="@null" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_title" />
        </RelativeLayout>

        <include layout="@layout/divide_line_bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_panel"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/message_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fadeScrollbars="true"
            android:minHeight="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/make"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制造" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/instal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安装" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/reform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="改造" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/maintain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修" />

                <com.gc.materialdesign.views.CheckBox
                    android:id="@+id/fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="气瓶充装" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:visibility="visible">

        <include layout="@layout/divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_left"
                android:gravity="center"
                android:maxLines="2"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <include layout="@layout/divide_line_vertical_bold" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bottom_right"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>