<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <include layout="@layout/item_checkout" />

        <LinearLayout
            android:id="@+id/activity_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context="com.wondersgroup.special.activity.CheckDetailActivity">

            <include
                android:id="@+id/base_info"
                layout="@layout/layout_info" />

            <include layout="@layout/subtitle_divide_line_bold" />

            <include
                android:id="@+id/record_info"
                layout="@layout/layout_info" />

            <include layout="@layout/subtitle_divide_line_bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

