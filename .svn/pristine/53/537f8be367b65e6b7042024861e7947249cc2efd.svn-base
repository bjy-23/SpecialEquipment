<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wondersgroup.special.widget.BaseRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/background"
        android:dividerHeight="0.5dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/permit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证书名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_body" />

        <TextView
            android:id="@+id/permit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_module"
            android:text="(许可类型)"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

    </LinearLayout>

    <TextView
        android:id="@+id/ent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="单位名称："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/permit_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="许可证号："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/organ_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="组织机构代码："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/credit_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="企业信誉代码："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/issue_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="发证日期："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/validity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="有效期："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />


    <TextView
        android:id="@+id/grant_gov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="发证机构："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/approval_organ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="审批机关："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/reg_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="注册地址："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/pro_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="生产地址："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

</LinearLayout>