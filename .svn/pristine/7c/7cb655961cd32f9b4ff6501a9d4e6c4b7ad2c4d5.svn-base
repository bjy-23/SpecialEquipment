<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_use_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.special.activity.unit.UseUnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="信用代码"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/credit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入信用代码"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="机构性质"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/organ_nature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请选择机构性质"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="检验项目"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/check_pro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请选择检验项目"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="机构地址"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:id="@+id/ent_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入机构地址"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="行政区划"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.special.widget.ClearEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入行政区划"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <Button
        android:id="@+id/btn_search"
        style="@style/ButtonMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_footer_left_right_padding"
        android:layout_marginRight="@dimen/header_footer_left_right_padding"
        android:layout_marginTop="@dimen/header_footer_left_right_padding"
        android:background="@drawable/selector_theme_button"
        android:text="@string/search" />
</LinearLayout>
