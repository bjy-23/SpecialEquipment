<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_use_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.pork.activity.unit.UseUnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/employment_name"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.pork.widget.ClearEditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/input_employment_name"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="许可类型"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/permit_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="选择许可类型"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/id_code"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.pork.widget.ClearEditText
            android:id="@+id/card_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/input_id_code"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="工作单位"
            android:textSize="@dimen/font_caption" />

        <com.wondersgroup.pork.widget.ClearEditText
            android:id="@+id/unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="输入工作单位"
            android:textColorHint="@color/text_grey"
            android:textSize="@dimen/font_caption" />
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="出生年月"
            android:textSize="@dimen/font_caption" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="起始年月"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="至"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="结束年月"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/subtitle_divide_line_bold" />

    <Button
        android:id="@+id/btn_search"
        style="@style/ButtonMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/header_footer_left_right_padding"
        android:layout_marginRight="@dimen/header_footer_left_right_padding"
        android:layout_marginTop="@dimen/header_footer_left_right_padding"
        android:background="@drawable/selector_theme_button"
        android:text="@string/search" />
</LinearLayout>
