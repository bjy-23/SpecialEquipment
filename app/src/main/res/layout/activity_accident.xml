<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_use_unit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.wondersgroup.special.activity.unit.UseUnitActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="事故单位"
                android:textSize="@dimen/font_caption" />

            <com.wondersgroup.special.widget.ClearEditText
                android:id="@+id/accident_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="输入事故单位"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="事故单位代码"
                android:textSize="@dimen/font_caption" />

            <com.wondersgroup.special.widget.ClearEditText
                android:id="@+id/unit_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="输入事故单位代码"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发生时间"
                android:textSize="@dimen/font_caption" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="起始时间"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="至"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="结束时间"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所属地区"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:id="@+id/local_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="选择所属地区"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="死亡人数"
                android:textSize="@dimen/font_caption" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_death"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="起始人数"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="至"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:id="@+id/end_death"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="结束人数"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重伤人数"
                android:textSize="@dimen/font_caption" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_injuries"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="起始人数"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="至"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:id="@+id/end_injuries"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="结束人数"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />
            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="直接经济损失"
                android:textSize="@dimen/font_caption" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <com.wondersgroup.special.widget.ClearEditText
                    android:id="@+id/start_loss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="起始金额"
                    android:inputType="number|numberDecimal"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="至"
                    android:textSize="@dimen/font_caption" />

                <com.wondersgroup.special.widget.ClearEditText
                    android:id="@+id/end_loss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="number|numberDecimal"
                    android:background="@null"
                    android:hint="结束金额"
                    android:textColorHint="@color/text_grey"
                    android:textSize="@dimen/font_caption" />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="事故类别"
                android:textSize="@dimen/font_caption" />

            <TextView
                android:id="@+id/accident_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="选择事故类别"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/font_caption" />
        </LinearLayout>

        <include layout="@layout/subtitle_divide_line_bold" />

        <Button
            android:id="@+id/btn_search"
            style="@style/ButtonMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_footer_left_right_padding"
            android:layout_marginRight="@dimen/header_footer_left_right_padding"
            android:layout_marginTop="@dimen/header_footer_left_right_padding"
            android:background="@drawable/selector_theme_button"
            android:text="@string/search" />
    </LinearLayout>
</ScrollView>