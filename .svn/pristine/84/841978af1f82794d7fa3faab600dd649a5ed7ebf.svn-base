<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/indicator_right_padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/indicator_right_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_body" />

        <TextView
            android:id="@+id/warning_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_module"
            android:text="(高危设备)"
            android:textColor="@color/red"
            android:textSize="@dimen/font_caption"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_module"
            android:text="(超期未检)"
            android:textColor="@color/yellow"
            android:textSize="@dimen/font_caption"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备类型："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

        <TextView
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备代码："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/ping_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备品类："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />
        <TextView
            android:id="@+id/child"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备子类："
            android:textColor="@color/text_grey"
            android:textSize="@dimen/font_caption" />

    </LinearLayout>

    <TextView
        android:id="@+id/reg_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="设备登记号："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="设备地址："
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />


</LinearLayout>