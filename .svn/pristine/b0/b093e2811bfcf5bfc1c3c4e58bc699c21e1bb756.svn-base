<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/indicator_right_padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/indicator_right_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闫小罗"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_body" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="@string/item_id_code"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/the_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="@string/the_no"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/employment_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:text="@string/employment_unit"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

    <TextView
        android:id="@+id/unit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_module"
        android:visibility="gone"
        android:text="@string/unit_address"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/font_caption" />

</LinearLayout>