package com.wondersgroup.special.adapter;

import android.content.Context;
import android.support.v7.widget.RecyclerView;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;

import com.wondersgroup.special.R;
import com.wondersgroup.special.entity.VoteListResult;

import java.util.List;

/**
 * Created by chan on 11/25/16.
 */

public class VoteAdapter extends RecyclerView.Adapter<VoteAdapter.ViewHolder> {
    private LayoutInflater inflater;
    private List<VoteListResult.VoteList> items;

    public VoteAdapter(Context context, List<VoteListResult.VoteList> items) {
        inflater = LayoutInflater.from(context);
        this.items = items;
    }

    @Override
    public VoteAdapter.ViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {
        return new VoteAdapter.ViewHolder(inflater.inflate(R.layout.item_vote, parent, false));
    }

    public void addItems(List<VoteListResult.VoteList> data) {
        if (null != items && data.size() != 0) {
            items.addAll(data);
            notifyDataSetChanged();
        }
    }

    public VoteListResult.VoteList getItem(int position) {
        return items.get(position);
    }

    @Override
    public void onBindViewHolder(VoteAdapter.ViewHolder holder, int position) {
        holder.mEntName.setText(items.get(position).getUnitName());
        holder.mAppealDate.setText(items.get(position).getBusiDate());
        holder.mAppealPerson.setText(items.get(position).getBusiPerson());
        holder.mAppealSrc.setText(items.get(position).getBusiFrom());
        holder.mAppealResult.setText(items.get(position).getIntercedeResult());
    }

    @Override
    public int getItemCount() {
        return items.size();
    }

    class ViewHolder extends RecyclerView.ViewHolder {
        private TextView mEntName, mAppealDate, mAppealPerson, mAppealSrc, mAppealResult;

        public ViewHolder(View itemView) {
            super(itemView);
            mEntName = (TextView) itemView.findViewById(R.id.ent_name);
            mAppealDate = (TextView) itemView.findViewById(R.id.appeal_date);
            mAppealPerson = (TextView) itemView.findViewById(R.id.appeal_person);
            mAppealSrc = (TextView) itemView.findViewById(R.id.appeal_src);
            mAppealResult = (TextView) itemView.findViewById(R.id.appeal_result);
        }
    }

}
