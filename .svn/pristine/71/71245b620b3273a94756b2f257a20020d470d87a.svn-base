public class UseUnitAdapter extends RecyclerView.Adapter<UseUnitAdapter.ViewHolder> {
    private LayoutInflater inflater;
    private List<UseListResult.UseList> items;

    public UseUnitAdapter(Context context, List<UseListResult.UseList> items) {
        inflater = LayoutInflater.from(context);
        this.items = items;
    }

    @Override
    public UseUnitAdapter.ViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {
        return new ViewHolder(inflater.inflate(R.layout.item_use_unit, parent, false));
    }

    public void addItems(List<UseListResult.UseList> data) {
        if (null != items && data.size() != 0) {
            items.addAll(data);
            notifyDataSetChanged();
        }
    }

    public UseListResult.UseList getItem(int position) {
        return items.get(position);
    }

    @Override
    public void onBindViewHolder(ViewHolder holder, int position) {
        holder.mUnitName.setText(getItem(position).getUnitName());
        holder.mUnitCode.setText("组织机构代码：" + getItem(position).getUnitCode());
        holder.mUnitProperty.setText("单位性质：" + getItem(position).getUnitProperty());
        holder.mUnitType.setText("单位类型：" + getItem(position).getUnitType());
        holder.mUnitAddress.setText("单位地址：" + getItem(position).getUnitAddress());
        holder.mUnitPhone.setText("联系电话：" + getItem(position).getUnitPhone());
    }

    @Override
    public int getItemCount() {
        return items.size();
    }

