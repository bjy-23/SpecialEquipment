<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/indicator_right_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/indicator_right_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/ent_unit"
                        android:src="@mipmap/icon_zonglan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_module"
                        android:text="@string/overall_data_overview"
                        android:textColor="@color/text_littte_black"
                        android:textSize="@dimen/font_body" />
                </LinearLayout>

                <TextView
                    android:id="@+id/overall_data_overview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/indicator_right_padding"
                    android:text=""
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/font_caption" />
            </RelativeLayout>

            <include layout="@layout/subtitle_divide_line_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/indicator_right_padding"
                    android:paddingRight="@dimen/indicator_right_padding"
                    android:paddingTop="@dimen/indicator_right_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/linear_equipment_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/indicator_right_padding">

                        <TextView
                            android:id="@+id/text_tag_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在用数量："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_equipment_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/theme"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_use"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_tag_use"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用单位："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_use_unit_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/theme"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/indicator_right_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/linear_manage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/indicator_right_padding">

                        <TextView
                            android:id="@+id/text_tag_manage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管理单元："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_manage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/theme"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_tag_overdue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="超期未检率："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_overdue_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_module"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/indicator_right_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/indicator_right_padding">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/ent_unit"
                        android:src="@mipmap/icon_qujian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_module"
                        android:text="@string/interval_data_overview"
                        android:textColor="@color/text_littte_black"
                        android:textSize="@dimen/font_body" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/indicator_right_padding">

                    <TextView
                        android:id="@+id/interval_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/font_caption" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 至 "
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/font_caption" />

                    <TextView
                        android:id="@+id/interval_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/font_caption" />
                </LinearLayout>
            </RelativeLayout>

            <include layout="@layout/subtitle_divide_line_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/indicator_right_padding"
                    android:paddingRight="@dimen/indicator_right_padding"
                    android:paddingTop="@dimen/indicator_right_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/indicator_right_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检查单位数："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_check_equ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检查设备数："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_check_equipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/theme"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/indicator_right_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/indicator_right_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="事故数："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_accident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="隐患率："
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />

                        <TextView
                            android:id="@+id/text_hidden_rectification_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/font_caption" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
